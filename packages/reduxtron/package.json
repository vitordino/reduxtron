{
  "name": "reduxtron",
  "version": "0.0.10",
  "author": "vitordino",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prebuild": "rm -rf ./dist",
    "build": "tsc -b -v && cpy --flat 'src/*.ts' 'dist'",
    "postbuild": "ts-node-esm src/setupPackage.ts",
    "release": "npm run build && cd dist && npm publish"
  },
  "sideEffects": false,
  "peerDependencies": {
    "electron": ">=24 || >=25 || >=26",
    "redux": ">=4 || ^5.0.0-beta.0",
    "zustand": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "electron": {
      "optional": false
    },
    "redux": {
      "optional": false
    },
    "zustand": {
      "optional": true
    }
  },
  "devDependencies": {
    "cpy-cli": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
