{
	"name": "demo",
	"version": "0.0.1",
	"description": "A Typescript/Redux application managing electron processes",
	"main": "./out/main/index.js",
	"author": "vitordino",
	"homepage": "https://vitordino.com",
	"scripts": {
		"format": "prettier --check .",
		"lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
		"typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
		"typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
		"typecheck": "npm run typecheck:node && npm run typecheck:web",
		"start": "electron-vite preview",
		"dev": "npm run dev:redux & npm run dev:electron",
		"demo": "npm run dev:redux & npm run dev:electron",
		"dev:electron": "electron-vite dev",
		"dev:redux": "redux-devtools --hostname=localhost --port=3001 --open",
		"build": "npm run typecheck && electron-vite build",
		"postinstall": "electron-builder install-app-deps",
		"build:win": "npm run build && electron-builder --win --config",
		"build:mac": "electron-vite build && electron-builder --mac --config",
		"build:linux": "electron-vite build && electron-builder --linux --config"
	},
	"prettier": "prettier-config-custom",
	"eslintConfig": { "extends": "custom" },
	"dependencies": {
		"reduxtron": "*",
		"@electron-toolkit/utils": "^1.0.2",
		"@radix-ui/colors": "^0.1.8",
		"@radix-ui/react-dropdown-menu": "^2.0.4",
		"@radix-ui/react-navigation-menu": "^1.1.2",
		"@radix-ui/react-slot": "^1.0.1",
		"@radix-ui/react-toggle-group": "^1.0.3",
		"@radix-ui/react-toolbar": "^1.0.3",
		"@redux-devtools/remote": "^0.8.0",
		"@reduxjs/toolkit": "^1.9.3",
		"@tailwindcss/forms": "^0.5.3",
		"@tailwindcss/line-clamp": "^0.4.4",
		"@vitejs/plugin-vue": "^4.2.1",
		"@vitejs/plugin-vue-jsx": "^3.0.1",
		"class-variance-authority": "^0.5.2",
		"clsx": "^1.2.1",
		"framer-motion": "^10.11.6",
		"react-hotkeys-hook": "^4.4.0",
		"react-icons": "^4.8.0",
		"react-router-dom": "^6.10.0",
		"redux": "^4.2.1",
		"redux-undo": "^1.0.1",
		"uid": "^2.0.2",
		"windy-radix-palette": "^0.6.1",
		"zustand": "^4.3.7"
	},
	"devDependencies": {
		"@electron-toolkit/preload": "^1.0.3",
		"@electron-toolkit/tsconfig": "^1.0.1",
		"@electron/notarize": "^1.2.3",
		"@redux-devtools/cli": "^2.0.0",
		"@redux-devtools/extension": "^3.2.5",
		"@sveltejs/vite-plugin-svelte": "^2.1.1",
		"@tsconfig/svelte": "^4.0.1",
		"@types/node": "16.18.21",
		"@types/react": "18.0.30",
		"@types/react-dom": "18.0.11",
		"@vitejs/plugin-react": "^3.1.0",
		"autoprefixer": "^10.4.14",
		"electron": "24.1.1",
		"electron-builder": "^23.6.0",
		"electron-devtools-assembler": "^1.2.0",
		"electron-vite": "^1.0.21",
		"postcss": "^8.4.21",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tailwindcss": "^3.3.1",
		"typescript": "^4.9.5",
		"vite": "^4.2.1",
		"vite-tsconfig-paths": "^4.2.0"
	}
}
